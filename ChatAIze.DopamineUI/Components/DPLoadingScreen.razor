@implements ITaggable

<DPOverlay IsVisible="@IsVisible">
    <DPLoadingIndicator Size="@LoadingIndicatorSize.Large" />
</DPOverlay>

@code {
    /// <summary>
    /// Gets or sets a value indicating whether the loading screen is visible.
    /// </summary>
    [Parameter]
    public bool IsVisible { get; set; }

    /// <summary>
    /// Gets or sets user data associated with the component.
    /// </summary>
    [Parameter]
    public object? Tag { get; set; }
}
