@typeparam T
@implements ITaggable

<div class="space-y-3 @WidthClass">
    <div>
        @if (!String.IsNullOrWhiteSpace(Label))
        {
            <label class="dp-label-base">
                <span class="@LabelClass">@Label</span>
                <span class="@EditIndicatorClass">‚óè</span>
            </label>
        }
        <div class="@PickerClass @WidthClass">
            <CascadingValue Value="Context">
                <CascadingValue Value="this">
                    @ChildContent
                </CascadingValue>
            </CascadingValue>
        </div>
    </div>
    @if (!String.IsNullOrWhiteSpace(Caption))
    {
        <div class="@CaptionClass">@Caption</div>
    }
</div>

@code {
    /// <summary>
    /// Gets or sets the label displayed above the segmented control.
    /// </summary>
    [Parameter]
    public string? Label { get; set; }

    /// <summary>
    /// Gets or sets helper text displayed under the control.
    /// </summary>
    [Parameter]
    public string? Caption { get; set; }

    /// <summary>
    /// Gets or sets the currently selected value.
    /// </summary>
    [Parameter]
    public T? Value { get; set; }

    /// <summary>
    /// Gets or sets the callback invoked when the selection changes.
    /// </summary>
    [Parameter]
    public EventCallback<T?> ValueChanged { get; set; }

    /// <summary>
    /// Gets or sets the segment items to render.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Gets or sets whether the control should stretch to full width.
    /// </summary>
    [Parameter]
    public bool? IsFullWidth { get; set; }

    /// <summary>
    /// Gets or sets a value indicating whether the control shows an edited indicator.
    /// </summary>
    [Parameter]
    public bool IsEdited { get; set; }

    /// <summary>
    /// Gets or sets a value indicating whether the control is disabled.
    /// </summary>
    [Parameter]
    public bool IsDisabled { get; set; }

    /// <summary>
    /// Gets or sets user data associated with the component.
    /// </summary>
    [Parameter]
    public object? Tag { get; set; }

    [CascadingParameter]
    private UIContext ParentContext { get; set; } = new();

    private UIContext Context => ParentContext with { IsDisabled = ParentContext.IsDisabled || IsDisabled };

    private string LabelClass => Context.IsDisabled ? "dp-label-disabled" : "dp-label";

    private string EditIndicatorClass
    {
        get
        {
            if (IsEdited)
            {
                return Context.IsDisabled ? "dp-edit-indicator-disabled" : "dp-edit-indicator";
            }

            return "dp-edit-indicator-inactive";
        }
    }

    private string PickerClass => Context.IsDisabled ? "dp-segmented-control-disabled" : "dp-segmented-control";

    private string CaptionClass => Context.IsDisabled ? "dp-caption-disabled px-3" : "dp-caption px-3";

    private string WidthClass
    {
        get
        {
            if (IsFullWidth == true)
            {
                return "w-full min-w-fit justify-stretch space-x-1 sm:space-x-3";
            }

            if (IsFullWidth == false)
            {
                return "w-fit space-x-1";
            }

            return "w-full sm:w-fit min-w-fit space-x-1";
        }
    }

    internal async Task SelectAsync(T? value)
    {
        if (!EqualityComparer<T>.Default.Equals(Value, value))
        {
            Value = value;

            if (ValueChanged.HasDelegate)
            {
                await ValueChanged.InvokeAsync(value);
            }

            StateHasChanged();
        }
    }
}
